    "submission": "class Solution {\npublic:\n    string largestPalindrome(int n, int k) {\n        vector<int> t(n);\n        if(k == 1 || k == 3 || k == 9 || k == 5 || k == 2 || k == 4){\n            for(int i = 0;i < n;i++){\n                t[i] = 9;\n            }\n            if(k == 5){\n                t[0] = 5;\n                t[n - 1] = 5;\n            }\n            if(k == 2){\n                t[0] = 8;\n                t[n - 1] = 8;\n            }\n            if(k == 4){\n                if(n <= 2){\n                    t[0] = 8;\n                    t[n - 1] = 8;\n                }\n                else{\n                    t[0] = 8;\n                    t[1] = 8;\n                    t[n - 1] = 8;\n                    t[n - 2] = 8;\n                }\n            }\n        }\n        else if(k == 8){\n            for(int i = 0;i < n;i++){\n                t[i] = 8;\n            }\n            if(n > 6){\n                for(int i = 3;i < n - 3;i++){\n                    t[i] = 9;\n\n                }\n            }\n        }\n        else if(k == 6){\n            if(n == 1){\n                t[0] = 6;\n            }\n            else if(n == 2){\n                t[0] = 6;\n                t[1] = 6;\n            }else{\n\n            \n            t[0] = 8;\n            t[n - 1] = 8;\n            for(int i = 1;i < n - 1;i++){\n                t[i] = 9;\n            }\n            if(n % 2 == 0){\n                t[n / 2 - 1] = 7;\n                t[n / 2] = 7;\n            }\n            else{\n                t[n / 2] = 8;\n            }\n            }\n        }\n        else{\n            vector<int> p{1,3,2,6,4,5};\n            int i = 0,j = n - 1;\n            int p1 = 0;\n            while(j - i > 1){\n                t[i] = 9;\n                t[j] = 9;\n                p1 += (9 * (p[i % 6] + p[j % 6])) % 7;\n                i++;\n                j--;\n            }\n            if(j - i == 1){\n                for(int t1 = 9;t1 >= 0;t1--){\n                    if((p1 + (t1 * (p[i % 6] + p[j % 6])) % 7) % 7 == 0){\n                        t[i] = t1;\n                        t[j] = t1;\n                        break;\n                    }\n                }\n            }\n            else{\n                for(int t1 = 9;t1 >= 0;t1--){\n                    if((p1 + (t1 * (p[i % 6])) % 7) % 7 == 0){\n                        t[i] = t1;\n                        break;\n                    }\n                }\n            }\n        }\n        string ans = \"\";\n        for(int i = 0;i < n;i++){\n            ans += (char)(t[i] + '0');\n        }\n        reverse(ans.begin(),ans.end());\n        return ans;\n    }\n};",
